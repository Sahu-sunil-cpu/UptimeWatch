{
  "name": "uptime",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:generate": "cd packages/db && pnpx prisma generate",
    "start:api": "cd packages/db && pnpm exec prisma migrate deploy && cd ../.. && cd apps/api && pnpm run dev",
    "start:frontend": "cd apps/frontend && pnpm run dev",
    "start:worker-pusher": "cd apps/worker-pusher && pnpm run dev",
    "start:worker-dns": "cd apps/worker-dns && pnpm run dev",
    "start:worker-db": "cd apps/worker-db && pnpm run dev",
    "start:worker-alert": "cd apps/worker-alert && pnpm run dev",
    "start:worker-web": "apps/worker-web && pnpm run dev"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.4",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
